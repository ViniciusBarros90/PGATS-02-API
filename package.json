    "graphql": "^16.11.0",
    "jsonwebtoken": "^9.0.2",
    "mocha": "^11.7.1",
    "sinon": "^21.0.0",
    "supertest": "^7.1.4",
    "swagger-ui-express": "^5.0.1"
  },
  "devDependencies": {
    "mochawesome": "^7.1.3"
